{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                /* Specify what module code is generated. */
    "rootDir": "./",                                  /* Specify the root folder within your source files. */
    "moduleResolution": "node",
    "outDir": "./dist",                                
    "esModuleInterop": true,                                     
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                  
  },
  "exclude": [
    "./node_modules"
  ],
}
